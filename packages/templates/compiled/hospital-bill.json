{
  "id": "hospital-bill",
  "version": "1.0.0",
  "issuers": [
    "Generic"
  ],
  "fields": {
    "hospitalName": {
      "patterns": [
        "Hospital\\\\s*:?\\\\s*(?P<value>[A-Z][A-Za-z\\\\s]+)",
        "Medical\\\\s*Center\\\\s*:?\\\\s*(?P<value>[A-Z][A-Za-z\\\\s]+)"
      ],
      "group_name": "value"
    },
    "patientName": {
      "patterns": [
        "Patient\\\\s*:?\\\\s*(?P<value>[A-Z][A-Za-z\\\\s]+)"
      ],
      "group_name": "value"
    },
    "billDate": {
      "patterns": [
        "Date\\\\s*:?\\\\s*(?P<value>\\\\d{1,2}\\\\s*[A-Za-z]{3,9}\\\\s*\\\\d{4}|\\\\d{4}-\\\\d{2}-\\\\d{2})"
      ],
      "group_name": "value"
    },
    "totalAmount": {
      "patterns": [
        "Total\\\\s*:?\\\\s*₹?\\\\s*(?P<value>[0-9,]+(?:\\\\.[0-9]{2})?)",
        "Amount\\\\s*Due\\\\s*:?\\\\s*₹?\\\\s*(?P<value>[0-9,]+(?:\\\\.[0-9]{2})?)"
      ],
      "group_name": "value"
    },
    "itemizedCharges": {
      "patterns": [
        "Charges?\\\\s*:?\\\\s*₹?\\\\s*(?P<value>[0-9,]+)"
      ],
      "group_name": "value"
    },
    "insuranceCoverage": {
      "patterns": [
        "Insurance\\\\s*Covered\\\\s*:?\\\\s*₹?\\\\s*(?P<value>[0-9,]+)"
      ],
      "group_name": "value"
    }
  },
  "post_rules": [
    {
      "ensure_amount_numeric": [
        "totalAmount",
        "insuranceCoverage"
      ]
    }
  ],
  "red_flags": [
    {
      "itemized_missing": "Itemized charges not listed"
    }
  ]
}
{
  "id": "tax-document",
  "version": "1.0.0",
  "issuers": [
    "Income Tax Department"
  ],
  "fields": {
    "panNumber": {
      "patterns": [
        "PAN\\\\s*:?\\\\s*(?P<value>[A-Z]{5}[0-9]{4}[A-Z])"
      ],
      "group_name": "value"
    },
    "assessmentYear": {
      "patterns": [
        "Assessment\\\\s*Year\\\\s*:?\\\\s*(?P<value>\\\\d{4}-\\\\d{2})"
      ],
      "group_name": "value"
    },
    "totalIncome": {
      "patterns": [
        "Total\\\\s*Income\\\\s*:?\\\\s*₹?\\\\s*(?P<value>[0-9,]+)"
      ],
      "group_name": "value"
    },
    "taxPaid": {
      "patterns": [
        "Tax\\\\s*Paid\\\\s*:?\\\\s*₹?\\\\s*(?P<value>[0-9,]+)"
      ],
      "group_name": "value"
    },
    "refundAmount": {
      "patterns": [
        "Refund\\\\s*:?\\\\s*₹?\\\\s*(?P<value>[0-9,]+)"
      ],
      "group_name": "value"
    },
    "status": {
      "patterns": [
        "Status\\\\s*:?\\\\s*(?P<value>(?:Processed|Pending|Refunded))"
      ],
      "group_name": "value"
    }
  },
  "post_rules": [
    {
      "ensure_amount_numeric": [
        "totalIncome",
        "taxPaid",
        "refundAmount"
      ]
    }
  ],
  "red_flags": []
}
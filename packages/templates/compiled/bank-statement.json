{
  "id": "bank-statement",
  "version": "1.0.0",
  "issuers": [
    "HDFC",
    "ICICI",
    "SBI"
  ],
  "fields": {
    "accountNumber": {
      "patterns": [
        "Account\\\\\\s*No\\\\\\.?\\\\\\s*:?\\\\\\s*(?P<value>[Xx*\\\\\\- ]{0,6}\\\\\\d{4,})"
      ],
      "group_name": "value"
    },
    "closingBalance": {
      "patterns": [
        "Closing\\\\\\s*Balance\\\\\\s*:?\\\\\\s*â‚¹?\\\\\\s*(?P<value>[0-9,]+(?:\\\\\\.\\\\\\d{1,2})?)"
      ],
      "group_name": "value"
    },
    "period": {
      "patterns": [
        "Period\\\\\\s*:?\\\\\\s*(?P<value>\\\\\\d{1,2}\\\\\\s*[A-Za-z]{3,9}\\\\\\s*\\\\\\d{4}\\\\\\s*to\\\\\\s*\\\\\\d{1,2}\\\\\\s*[A-Za-z]{3,9}\\\\\\s*\\\\\\d{4})"
      ],
      "group_name": "value"
    }
  },
  "post_rules": [
    {
      "ensure_amount_numeric": [
        "closingBalance"
      ]
    }
  ],
  "red_flags": []
}